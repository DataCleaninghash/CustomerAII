{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "strict": false,
    "target": "es2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": ["src/**/*", "main.ts"],
  "exclude": ["node_modules", "lib"]
}